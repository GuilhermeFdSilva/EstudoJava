package fundamentos;

public class TipoString {
	public static void main(String[] args) {
		System.out.println("Ol√° Pessoal".charAt(9));
		
		String s = "Boa Tarde";
		System.out.println(s.concat("!!!"));
		System.out.println(s + "!!!");
		System.out.println(s.startsWith("Boa"));
		System.out.println(s.toLowerCase().startsWith("boa"));
		System.out.println(s.toUpperCase().endsWith("TARDE"));
		System.out.println(s.length());
		System.out.println(s.equals("BOA TARDE"));
		System.out.println(s.equalsIgnoreCase("BOA TAEDE"));
		
	var nome = "Pedro";
	var sobrenome = "Henrrique";
	var idade = 33;
	var salario = 2948.87;
	
	System.out.println("Nome: " + nome + "\nSobrenome: " + sobrenome + "\nIdade: " + idade + "\nSalario: " + salario + "\n\n");
	
	System.out.printf("Nome: %s %s", nome, sobrenome);
	}
}
